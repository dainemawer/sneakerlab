  {% render 'header-navigation' %}
  {% render 'account-modal' %}
</header>

{%- render 'cart-notification' -%}

<script>
  const about_url = '/pages/about'
  const about_url2 = '/pages/about-us'
  const contact_url = '/pages/contact'
  const contact_url2 = '/pages/contact-us'
  const search = document.getElementById("menu-bg");
  const border_bottom = document.getElementById("search");
  const about_close = document.getElementById("close-search");
  const search_text = document.getElementById("query");
  const search_color = document.getElementById("search-color");
  if (window.location.pathname === about_url || window.location.pathname === about_url2) {
      search.classList.add('bg-black' )
      search.classList.add('menu-blur-dark')
      border_bottom.classList.add('border-b', 'border-white' )
      search_text.classList.add('text-white')
      about_close.classList.add('invert')
      search_color.classList.remove('bg-[#fff]')
      search_color.classList.add('bg-[#000]', 'opacity-100')
  } if (window.location.pathname === contact_url || window.location.pathname === contact_url2) {
      search.classList.add('bg-black')
      search.classList.add('menu-blur-dark')
      border_bottom.classList.add('border-b', 'border-white')
      search_text.classList.add('text-white')
      about_close.classList.add('invert')
      search_color.classList.remove('bg-[#fff]')
      search_color.classList.add('bg-[#000]', 'opacity-100')
  } else {
      search.classList.add('bg-transparent')
      search_text.classList.add('text-black')
      search.classList.add('menu-blur')
  }
</script>
